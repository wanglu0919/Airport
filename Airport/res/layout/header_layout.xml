<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_rl_title"
    android:layout_width="fill_parent"
    android:layout_height="45dip"
    android:layout_alignParentTop="true"
    
    android:background="#1469AD"
     >

     <Button
        android:id="@+id/head_btn_back"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/title_back_selector"
        android:text="返回"
        android:textColor="@android:color/white"
        android:visibility="gone"
         />
     
    <RelativeLayout 
        android:layout_marginLeft="5dip"
        android:layout_centerInParent="true"
         android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/head_logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_title_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head_logo_icon"
        android:text="苏南硕放国际机场"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
         />
    </RelativeLayout>
    
    
    <Button
        android:id="@+id/head_btn_index"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/title_call_command_selector"
        android:textColor="@android:color/white"
       	android:text="首页"
       	android:visibility="gone"
        />

</RelativeLayout>